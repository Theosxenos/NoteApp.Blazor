	void NewNote()
	{
		var note = new Note()
		{
			NoteId = ++lastid,
			Name = $"Test {new Random().Next()}",
			NotebookId = NbSvc.ActiveNotebook.NotebookId
		};
		NtSvc.CreateNote(note);
	}

	private void OnNoteClick(Note note)
	{
		NtSvc.SetActiveNote(note.NoteId);
		// OnActiveChanged(null, EventArgs.Empty);
	}

}
